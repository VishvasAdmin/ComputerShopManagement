@page
@model ReportModel
@{
    ViewData["Title"] = "Generate Report";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>Generate Report</title>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <!-- Header -->
                <h2 class="text-center mb-4">Generate Report</h2>
                <p class="text-muted text-center">Select the type of report you want to generate.</p>

                <!-- Form Section -->
                <form method="post" class="card p-4 shadow-sm">
                    <div class="mb-3">
                        <label for="ReportType" class="form-label">Report Type</label>
                        <select asp-for="ReportType" id="ReportType" class="form-select">
                            <option value="" disabled selected>Select a report type</option>
                            <option>Sale</option>
                            <option>Stock</option>
                        </select>
                        <span asp-validation-for="ReportType" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Generate Report</button>
                    </div>
                </form>

                <!-- Report Data Section -->
                @if (Model.ReportData != null)
                {
                    <div class="mt-4">
                        <h3>Report Data</h3>
                        <pre class="bg-light p-3 border rounded">@Model.ReportData</pre>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
