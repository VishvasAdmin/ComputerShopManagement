@page
@model SalesModel

<h2>Add Sale</h2>

<form method="post">
    <label>Item ID:</label>
    <input asp-for="StockItemId" type="number" />
    <label>Quantity:</label>
    <input asp-for="Quantity" type="number" />
    <button type="submit">Add Sale</button>
</form>

@if (Model.Message != null)
{
    <p>@Model.Message</p>
}
