@page
@model SalesModel
@{
    ViewData["Title"] = "Add Sale";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center">Add Sale</h2>
            <p class="text-muted text-center">Record a new sale by entering the item details below.</p>

            <!-- Form Section -->
            <form method="post" class="mt-4">
                <div class="mb-3">
                    <label for="StockItemId" class="form-label">Item ID</label>
                    <input asp-for="StockItemId" type="number" id="StockItemId" class="form-control" placeholder="Enter item ID" />
                    <span asp-validation-for="StockItemId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Quantity" class="form-label">Quantity</label>
                    <input asp-for="Quantity" type="number" id="Quantity" class="form-control" placeholder="Enter quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Add Sale</button>
                </div>
            </form>

            <!-- Message Section -->
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-info mt-4" role="alert">
                    @Model.Message
                </div>
            }
        </div>
    </div>
</div>
