@page
@model StockModel
@{
    ViewData["Title"] = "Add Stock Item";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>Add Stock Item</title>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <!-- Header -->
                <h2 class="text-center mb-4">Add Stock Item</h2>
                <p class="text-muted text-center">Fill in the details below to add a new stock item.</p>

                <!-- Form Section -->
                <form method="post" class="card p-4 shadow-sm">
                    <div class="mb-3">
                        <label for="StockItemName" class="form-label">Item Name</label>
                        <input asp-for="StockItemName" id="StockItemName" class="form-control" placeholder="Enter item name" />
                        <span asp-validation-for="StockItemName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Quantity" class="form-label">Quantity</label>
                        <input asp-for="Quantity" id="Quantity" class="form-control" type="number" placeholder="Enter quantity" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Price" class="form-label">Price</label>
                        <input asp-for="Price" id="Price" class="form-control" type="number" placeholder="Enter price" step="0.01" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Add Stock</button>
                    </div>
                </form>

                <!-- Message Section -->
                @if (Model.Message != null)
                {
                    <div class="alert alert-success mt-4" role="alert">
                        @Model.Message
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
