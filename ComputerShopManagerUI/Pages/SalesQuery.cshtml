@page
@model SalesqModel
@{
    ViewData["Title"] = "Sales Query";
}
<html>

<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2 class="text-center">Search Stocks</h2>
                <p class="text-muted text-center">Records</p>



                <form method="post" class="card p-4 shadow-sm">
                    <label for="Query">Enter SQL Query:</label><br />
                    <textarea id="Query" name="Query" rows="4" cols="50"
                        placeholder="SELECT * FROM StockItem WHERE Name = 'Laptop';"></textarea><br /><br />

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Execute Query</button>
                    </div>
                </form>

                <h3>Results</h3>
                <div id="results">@Model.Message</div>
            </div>
        </div>
    </div>
</body>

</html>